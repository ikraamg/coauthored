{
  "meta": {
    "formatVersion": 2,
    "schemaVersion": "2.0.0",
    "origin": "coauthored.dev",
    "name": "Coauthored",
    "description": "A transparency tool for AI-assisted code"
  },

  "axes": {
    "stakes": {
      "label": "Stakes",
      "description": "How critical is this code?",
      "min": 1,
      "max": 5,
      "default": 3,
      "stops": [
        { "value": 1, "label": "Throwaway" },
        { "value": 2, "label": "Low" },
        { "value": 3, "label": "Moderate" },
        { "value": 4, "label": "High" },
        { "value": 5, "label": "Critical" }
      ]
    },
    "autonomy": {
      "label": "AI Autonomy",
      "description": "How much did AI drive this?",
      "min": 1,
      "max": 5,
      "default": 3,
      "stops": [
        { "value": 1, "label": "Human-authored" },
        { "value": 2, "label": "Human-led" },
        { "value": 3, "label": "Collaborative" },
        { "value": 4, "label": "AI-led" },
        { "value": 5, "label": "AI-authored" }
      ]
    }
  },

  "quadrants": {
    "handcrafted": {
      "label": "Handcrafted",
      "description": "Human-driven, low stakes",
      "color": "009e73",
      "stakes": [1, 2],
      "autonomy": [1, 2]
    },
    "professional": {
      "label": "Engineered",
      "description": "Human-driven, high stakes",
      "color": "0072b2",
      "stakes": [4, 5],
      "autonomy": [1, 2]
    },
    "vibe": {
      "label": "Vibe Coded",
      "description": "AI-driven, low stakes",
      "color": "e69f00",
      "stakes": [1, 2],
      "autonomy": [4, 5]
    },
    "inspection": {
      "label": "Unvetted",
      "description": "AI-driven, high stakes",
      "color": "d55e00",
      "stakes": [4, 5],
      "autonomy": [4, 5]
    },
    "collaborative": {
      "label": "Collaborative",
      "description": "Balanced human-AI partnership",
      "color": "cc79a7",
      "stakes": [3, 3],
      "autonomy": [3, 3]
    }
  },

  "details": {
    "scope": {
      "type": "enum",
      "label": "Scope",
      "description": "What does this cover?",
      "values": [
        { "value": "project", "label": "Project", "desc": "Entire repository" },
        { "value": "pr", "label": "Pull request", "desc": "Specific changeset" },
        { "value": "file", "label": "File", "desc": "Single file" },
        { "value": "component", "label": "Component", "desc": "Module or feature" }
      ]
    },
    "tools": {
      "type": "text",
      "label": "AI tools used",
      "placeholder": "Claude, Cursor, Copilot, etc."
    },
    "review": {
      "type": "flags",
      "label": "Review methods",
      "description": "How was AI output reviewed?",
      "values": [
        { "value": "spot", "label": "Light review", "desc": "Spot-checked key sections" },
        { "value": "full", "label": "Thorough review", "desc": "Read all the code" },
        { "value": "ran", "label": "Manual testing", "desc": "Ran and verified behavior" },
        { "value": "tests", "label": "Trusted tests", "desc": "Human-verified test suite" },
        { "value": "aitests", "label": "AI tests", "desc": "Tests also AI-generated" },
        { "value": "iter", "label": "Iterated", "desc": "Multiple rounds with AI" }
      ]
    },
    "watch": {
      "type": "flags",
      "label": "Watch areas",
      "description": "Where should reviewers pay attention?",
      "values": [
        { "value": "arch", "label": "Architecture", "desc": "Design decisions" },
        { "value": "code", "label": "Code quality", "desc": "Implementation details" },
        { "value": "security", "label": "Security", "desc": "Potential vulnerabilities" },
        { "value": "edge", "label": "Edge cases", "desc": "Error handling incomplete" },
        { "value": "perf", "label": "Performance", "desc": "Not optimized" },
        { "value": "tests", "label": "Test coverage", "desc": "Tests incomplete" }
      ]
    },
    "notes": {
      "type": "text",
      "label": "Notes",
      "placeholder": "Context, caveats, details...",
      "multiline": true
    },
    "created": {
      "type": "date",
      "label": "Created",
      "auto": true
    }
  },

  "ui": {
    "title": "Coauthored",
    "tagline": "A transparency tool for AI-assisted code",
    "heading": "How was this code built?",
    "badge": {
      "service": "https://img.shields.io/badge/{text}-{color}?style={style}"
    },
    "labels": {
      "submit": "View",
      "edit": "Edit",
      "createNew": "Create New",
      "share": "Share",
      "url": "URL",
      "markdown": "Markdown",
      "copy": "Copy",
      "details": "Details",
      "collapse": "Collapse"
    },
    "notices": {
      "viewer": {
        "text": "Self-reported context from the author about AI involvement."
      }
    },
    "footer": "A transparency tool for AI-assisted code"
  }
}
